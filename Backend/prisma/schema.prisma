generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id String @id @default(uuid())
  names String @unique
  email String @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}



enum Status {
  checkedin
  checkout
}

model Goat {
  id                       String   @id @default(uuid())

  // Basic Identification Details
  goatName                String
  breed                   String
  dateOfBirth             DateTime?
  Gender                  String?
  color                   String?
  weight                  Float?
  sireName                String?
  sireRegistrationNumber  String?
  damName                 String?
  damRegistrationNumber   String?
  breederName             String?
  image                   String?
  status                  Status    @default(checkedin)
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt
}
